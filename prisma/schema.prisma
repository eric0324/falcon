generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum Visibility {
  PRIVATE
  DEPARTMENT
  COMPANY
  PUBLIC
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  department    String?
  role          Role      @default(MEMBER)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())

  accounts            Account[]
  sessions            Session[]
  tools               Tool[]
  conversations       Conversation[]
  toolUsages          ToolUsage[]
  reviews             Review[]
  reviewReplies       ReviewReply[]
  apiLogs             ApiLog[]
  googleServiceTokens GoogleServiceToken[]
  tokenUsages         TokenUsage[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tool {
  id          String     @id @default(cuid())
  name        String
  description String?
  code        String     @db.Text
  visibility  Visibility @default(PRIVATE)
  category    String?
  tags        String[]
  dataSources Json?      // ToolDataSource[] - 工具使用的資料來源

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId String?       @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usages  ToolUsage[]
  reviews Review[]
  stats   ToolStats?
  apiLogs ApiLog[]

  @@index([category])
  @@index([visibility])
  @@index([createdAt])
}

model Conversation {
  id          String    @id @default(cuid())
  title       String?
  messages    Json[]
  model       String?
  dataSources String[]  @default([])
  summary     String?   @db.Text

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  tool        Tool?
  tokenUsages TokenUsage[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([userId, updatedAt])
  @@index([deletedAt])
}

enum UsageSource {
  MARKETPLACE
  DIRECT
  SHARE
}

enum DataSourceType {
  // Database
  POSTGRES
  MYSQL
  MONGODB

  // REST
  REST_API

  // Google
  GOOGLE_SHEETS
  GOOGLE_DRIVE
  GOOGLE_CALENDAR
  GOOGLE_GMAIL
  GOOGLE_ANALYTICS

  // SaaS (future)
  NOTION
  SLACK
  GITHUB
}

enum AuthType {
  CONNECTION_STRING
  API_KEY
  OAUTH
}

model ToolUsage {
  id        String      @id @default(cuid())
  toolId    String
  userId    String
  source    UsageSource @default(DIRECT)
  duration  Int?        // seconds
  createdAt DateTime    @default(now())

  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([toolId])
  @@index([userId])
  @@index([createdAt])
}

model Review {
  id        String   @id @default(cuid())
  toolId    String
  userId    String
  rating    Int      // 1-5
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tool    Tool          @relation(fields: [toolId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies ReviewReply[]

  @@unique([toolId, userId]) // one review per user per tool
  @@index([toolId])
  @@index([userId])
}

model ReviewReply {
  id        String   @id @default(cuid())
  reviewId  String
  userId    String   // author of the tool
  content   String   @db.Text
  createdAt DateTime @default(now())

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([reviewId])
}

model ToolStats {
  id              String   @id @default(cuid())
  toolId          String   @unique
  totalUsage      Int      @default(0)
  weeklyUsage     Int      @default(0)
  totalReviews    Int      @default(0)
  averageRating   Float    @default(0)
  weightedRating  Float    @default(0) // IMDB formula
  trendingScore   Float    @default(0)
  lastCalculated  DateTime @default(now())

  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@index([weeklyUsage])
  @@index([weightedRating])
  @@index([trendingScore])
}

// ===== API Bridge Models =====

model DataSource {
  id                   String         @id @default(cuid())
  name                 String         @unique
  displayName          String
  description          String?
  type                 DataSourceType

  // Authentication
  authType             AuthType       @default(CONNECTION_STRING)
  config               Json
  oauthAccountId       String?        // Link to OAuth account (for OAuth auth type)
  tokenExpiresAt       DateTime?      // Token expiration (for OAuth)

  globalBlockedColumns String[]       @default([])
  allowedEndpoints     String[]       @default([])
  schema               Json?

  isActive             Boolean        @default(true)
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  permissions          DataSourcePermission[]
  apiLogs              ApiLog[]
}

model DataSourcePermission {
  id                  String   @id @default(cuid())
  dataSourceId        String
  department          String

  readTables          String[] @default([])
  readBlockedColumns  String[] @default([])
  writeTables         String[] @default([])
  writeBlockedColumns String[] @default([])
  deleteTables        String[] @default([])

  dataSource          DataSource @relation(fields: [dataSourceId], references: [id], onDelete: Cascade)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([dataSourceId, department])
  @@index([department])
}

model ApiLog {
  id           String   @id @default(cuid())
  dataSourceId String
  toolId       String?
  userId       String
  department   String

  operation    String
  method       String?
  query        String?  @db.Text
  params       Json?

  success      Boolean
  errorMessage String?
  rowCount     Int?
  duration     Int

  createdAt    DateTime @default(now())

  dataSource   DataSource @relation(fields: [dataSourceId], references: [id])
  tool         Tool?      @relation(fields: [toolId], references: [id], onDelete: SetNull)
  user         User       @relation(fields: [userId], references: [id])

  @@index([dataSourceId])
  @@index([toolId])
  @@index([userId])
  @@index([department])
  @@index([createdAt])
}

// ===== Token Usage Models =====

model TokenUsage {
  id              String   @id @default(cuid())
  userId          String
  conversationId  String?

  model           String
  inputTokens     Int
  outputTokens    Int
  totalTokens     Int

  createdAt       DateTime @default(now())

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation    Conversation? @relation(fields: [conversationId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([conversationId])
  @@index([createdAt])
  @@index([model])
}

// ===== Google Services Models =====

enum GoogleService {
  SHEETS
  DRIVE
  CALENDAR
  GMAIL
}

model GoogleServiceToken {
  id           String        @id @default(cuid())
  userId       String
  service      GoogleService

  accessToken  String        @db.Text
  refreshToken String        @db.Text
  expiresAt    DateTime
  scope        String

  isValid      Boolean       @default(true)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, service])
  @@index([userId])
}
