generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum Visibility {
  PRIVATE
  DEPARTMENT
  COMPANY
  PUBLIC
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  department    String?
  role          Role      @default(MEMBER)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())

  accounts      Account[]
  sessions      Session[]
  tools         Tool[]
  conversations Conversation[]
  toolUsages    ToolUsage[]
  reviews       Review[]
  reviewReplies ReviewReply[]
  apiLogs       ApiLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tool {
  id             String     @id @default(cuid())
  name           String
  description    String?
  code           String     @db.Text
  visibility     Visibility @default(PRIVATE)
  category       String?
  tags           String[]
  allowedSources String[]   @default([])

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId String?       @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usages  ToolUsage[]
  reviews Review[]
  stats   ToolStats?
  apiLogs ApiLog[]

  @@index([category])
  @@index([visibility])
  @@index([createdAt])
}

model Conversation {
  id          String   @id @default(cuid())
  title       String?
  messages    Json[]
  model       String?
  dataSources String[] @default([])

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  tool Tool?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, updatedAt])
}

enum UsageSource {
  MARKETPLACE
  DIRECT
  SHARE
}

enum DataSourceType {
  POSTGRES
  MYSQL
  REST_API
}

model ToolUsage {
  id        String      @id @default(cuid())
  toolId    String
  userId    String
  source    UsageSource @default(DIRECT)
  duration  Int?        // seconds
  createdAt DateTime    @default(now())

  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([toolId])
  @@index([userId])
  @@index([createdAt])
}

model Review {
  id        String   @id @default(cuid())
  toolId    String
  userId    String
  rating    Int      // 1-5
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tool    Tool          @relation(fields: [toolId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies ReviewReply[]

  @@unique([toolId, userId]) // one review per user per tool
  @@index([toolId])
  @@index([userId])
}

model ReviewReply {
  id        String   @id @default(cuid())
  reviewId  String
  userId    String   // author of the tool
  content   String   @db.Text
  createdAt DateTime @default(now())

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([reviewId])
}

model ToolStats {
  id              String   @id @default(cuid())
  toolId          String   @unique
  totalUsage      Int      @default(0)
  weeklyUsage     Int      @default(0)
  totalReviews    Int      @default(0)
  averageRating   Float    @default(0)
  weightedRating  Float    @default(0) // IMDB formula
  trendingScore   Float    @default(0)
  lastCalculated  DateTime @default(now())

  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@index([weeklyUsage])
  @@index([weightedRating])
  @@index([trendingScore])
}

// ===== API Bridge Models =====

model DataSource {
  id                   String         @id @default(cuid())
  name                 String         @unique
  displayName          String
  description          String?
  type                 DataSourceType

  config               Json
  globalBlockedColumns String[]       @default([])
  allowedEndpoints     String[]       @default([])
  schema               Json?

  isActive             Boolean        @default(true)
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  permissions          DataSourcePermission[]
  apiLogs              ApiLog[]
}

model DataSourcePermission {
  id                  String   @id @default(cuid())
  dataSourceId        String
  department          String

  readTables          String[] @default([])
  readBlockedColumns  String[] @default([])
  writeTables         String[] @default([])
  writeBlockedColumns String[] @default([])
  deleteTables        String[] @default([])

  dataSource          DataSource @relation(fields: [dataSourceId], references: [id], onDelete: Cascade)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([dataSourceId, department])
  @@index([department])
}

model ApiLog {
  id           String   @id @default(cuid())
  dataSourceId String
  toolId       String?
  userId       String
  department   String

  operation    String
  method       String?
  query        String?  @db.Text
  params       Json?

  success      Boolean
  errorMessage String?
  rowCount     Int?
  duration     Int

  createdAt    DateTime @default(now())

  dataSource   DataSource @relation(fields: [dataSourceId], references: [id])
  tool         Tool?      @relation(fields: [toolId], references: [id], onDelete: SetNull)
  user         User       @relation(fields: [userId], references: [id])

  @@index([dataSourceId])
  @@index([toolId])
  @@index([userId])
  @@index([department])
  @@index([createdAt])
}
